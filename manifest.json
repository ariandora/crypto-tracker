{
	"name": "BCC Price (BitConnect Coin)",
	"short_name": "BCC ticker",
	"version": "0.0.3",
	"manifest_version": 2,
	"description": "Current BCC price on the badge icon.",
	"icons": {
		"16": "icons/icon@16.png",
		"48": "icons/icon@48.png",
		"128": "icons/icon@128.png"
	},
	"background": {
		"scripts": [
			"src/bg/background.js"
		],
		"persistent": true
	},
	"permissions": [
		"https://api.coinmarketcap.com/*",
		"alarms",
		"storage"
	],
	"browser_action": {
		"default_icon": "icons/icon@19.png",
		"default_title": "BCC price",
		"default_popup": "src/popup/popup.html"
	}
}
